<UserControl x:Class="CompBuilderTool.App.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompBuilderTool.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Background="CornflowerBlue" Margin="1"
                    Name="CompBuilder_Button">Comp Builder</Button>
        <Button Grid.Column="1" Background="PaleGoldenrod" Margin="1" 
                    Name="CompSettings_Button">Comp Settings</Button>
        <Button Grid.Column="2" Background="Orchid" Margin="1" 
                    Name="UserComps_Button">My Comps</Button>
        <Button Grid.Column="3" Background="LightSeaGreen" Margin="1" 
                    Name="UserAccount_Button">My Account</Button>
        <Button Grid.Column="4" Background="DarkSlateGray" Margin="1" 
                    Name="Settings_Button">Settings</Button>
    </Grid>
</UserControl>
