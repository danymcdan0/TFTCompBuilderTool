<UserControl x:Class="CompBuilderTool.App.Views.UnitsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompBuilderTool.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="Coral" 
            Orientation="Vertical" Name ="UnitSearchView">
            <TextBox x:Name="SearchBox" Margin="10" ToolTip="Search..."></TextBox>
            <ListView x:Name="UnitListView" 
              Margin="10 0 10 10" 
              Background="AliceBlue"
              ItemsSource="{Binding Units}" 
              DisplayMemberPath="Name"
              AllowDrop ="True"/>
        </StackPanel>
    </Grid>
</UserControl>
